<div class="navigation-bar">
  <div class="container padding-sides-15">
    <div class="brand">
      <%= link_to users_path, class: "logo" do %>
        Digi<b>code</b>
      <% end %>
      <div class='slogan'>
        The only place to store your friends' digicodes
      </div>
    </div>
    <div class="bar-right pull-right">
      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
              <div class="img-avatar">
                <%= image_tag current_user.picture, { class: "img total-width border-radius-2" } %>
              </div>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Browse users', users_path %></li>
              <li><%= link_to 'Update my digicode', edit_user_path(current_user) %></li>
              <li><%= link_to 'Sign out', destroy_user_session_path, method: 'delete' %></li>
            </ul>
          </li>
        </ul>
      <% else %>
        <div class="button margin-right-0 slide-down">
          <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-facebook" do %>
            Connect with <i class="fa fa-facebook-square"></i>
          <% end %>
        </div>
      <% end %>
      <div class="nav-link">
      </div>
    </div>
  </div>
</div>